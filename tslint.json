{
  "extends": [
    "tslint:recommended",
    "tslint-react"],
  "linterOptions": {
    "exclude": [
      "config/**/*.js",
      "node_modules/**/*.ts",
      "coverage/lcov-report/*.js"
    ]
  },
  "rules": {
    "quotemark": [
      true,
      "single",
      "avoid-escape"
    ],
    "ordered-imports": false,
    "object-literal-sort-keys": false,
    "jsx-no-multiline-js": false
  }
}
